generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id String @id
  username String
  email String
  posts Post[]
  
}

model Post{
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tags String[]
  title String
  content String
  userId String
  user User @relation(fields: [userId], references: [id])
}

model Like{
  id String @id @default(uuid())

}